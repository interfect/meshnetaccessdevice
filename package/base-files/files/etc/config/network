config interface loopback
	option ifname	lo
	option proto	static
	option ipaddr	127.0.0.1
	option netmask	255.0.0.0

config interface lan
	option ifname	eth0
	option type 	bridge
	option proto	static
	option ip6addr	fdfc::1/64
	option ip6assign 60

config interface wan
	option ifname eth1
	option proto dhcp

